    <ThingDef ParentName="AnimalThingBase">
        <defName>ChickenTragic</defName>
        <label>tragic chicken</label>
        <description>A human, wait.. I mean the most traditional farm bird, the chicken is raised for its eggs and meat.
            It grows very quickly and lays eggs very often.
        </description>
        <statBases>
            <MoveSpeed>2.1</MoveSpeed>
            <MarketValue>50</MarketValue>
            <LeatherAmount>0</LeatherAmount>
            <ComfyTemperatureMin>-10</ComfyTemperatureMin>
        </statBases>
        <tools>
            <li>
                <label>claws</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>2</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>Feet</linkedBodyPartsGroup>
            </li>
            <li>
                <label>beak</label>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>3</power>
                <cooldownTime>2</cooldownTime>
                <linkedBodyPartsGroup>Beak</linkedBodyPartsGroup>
            </li>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>1</power>
                <cooldownTime>1.5</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
                <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
                <chanceFactor>0.2</chanceFactor>
            </li>
        </tools>
        <comps>
            <li Class="CompProperties_EggLayer">
                <eggUnfertilizedDef>EggChickenUnfertilized</eggUnfertilizedDef>
                <eggFertilizedDef>EggChickenFertilized</eggFertilizedDef>
                <eggFertilizationCountMax>1</eggFertilizationCountMax>
                <eggLayIntervalDays>2</eggLayIntervalDays>
                <eggCountRange>1</eggCountRange>
            </li>
        </comps>
        <race>
            <body>Bird</body>
            <thinkTreeMain>Humanlike</thinkTreeMain>
            <thinkTreeConstant>HumanlikeConstant</thinkTreeConstant>
          
            <nameCategory>HumanStandard</nameCategory>
            <baseHungerRate>0.35</baseHungerRate>
            <baseBodySize>0.18</baseBodySize>
            <baseHealthScale>0.55</baseHealthScale>
            <foodType>OmnivoreRoughAnimal</foodType>
            <trainability>None</trainability>
            <wildness>0</wildness>
            <manhunterOnTameFailChance>0</manhunterOnTameFailChance>
            <manhunterOnDamageChance>0</manhunterOnDamageChance>
            <mateMtbHours>8</mateMtbHours>
            <lifeExpectancy>6</lifeExpectancy>
            <lifeStageAges>
                <li>
                    <def>AnimalBabyTiny</def>
                    <minAge>0</minAge>
                    <soundWounded>Pawn_Chick_Call</soundWounded>
                    <soundDeath>Pawn_Chick_Call</soundDeath>
                    <soundCall>Pawn_Chick_Call</soundCall>
                    <soundAngry>Pawn_Chick_Call</soundAngry>
                </li>
                <li>
                    <def>AnimalJuvenile</def>
                    <minAge>1</minAge>
                </li>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>2</minAge>
                    <soundWounded>Pawn_Chicken_Wounded</soundWounded>
                    <soundDeath>Pawn_Chicken_Death</soundDeath>
                    <soundCall>Pawn_Chicken_Call</soundCall>
                    <soundAngry>Pawn_Chicken_Angry</soundAngry>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_SmallScratch_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_SmallScratch_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_SmallScratch_Miss</soundMeleeMiss>
        </race>
        <tradeTags>
            <li>AnimalCommon</li>
            <li>AnimalFarm</li>
        </tradeTags>
    </ThingDef>

